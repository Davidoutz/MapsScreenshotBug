<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapsScreenshotBug.MainPage">

    <Grid RowDefinitions="*, auto, *">
        <Map x:Name="map" />
        <Button Grid.Row="1" Text="Take screenshot and see below" Clicked="Button_Clicked" />
        <Image Grid.Row="2" x:Name="screenshot" BackgroundColor="LightGoldenrodYellow"/>
    </Grid>

</ContentPage>
